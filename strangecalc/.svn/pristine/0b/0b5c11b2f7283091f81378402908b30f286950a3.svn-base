# Common definitions
if test -z "$srcdir"; then
    srcdir=`echo "$0" | sed 's,[^/]*$,,'`
    test "$srcdir" = "$0" && srcdir=.
    test -z "$srcdir" && srcdir=.
    test "${VERBOSE+set}" != set && VERBOSE=1
fi
. $srcdir/defs

# this is the output we should expect to see
cp $SETUP/Lagrangian_test_ok .

cat <<\EOF >errok
EOF

# setup some stuff prior to running test
RUNTSC="${SETUP}/Lagrangian_test"


# Run the test saving stderr to a file, and showing stdout if VERBOSE == 1
$RUNTSC  2> Lagrangian_test_err | tee -i Lagrangian_test_out >&2

# Test against expected output
if ${CMP} -s Lagrangian_test_out Lagrangian_test_ok; then
  :
else
    echo "ok:" >&2
    cat Lagrangian_test_ok >&2
    exit 1
fi

# Munge error output to remove leading directories, `lt-' or trailing `.exe'
sed -e "s,^[^:]*[lt-]*sic[.ex]*:,sic:," Lagrangian_test_err >sederr && mv sederr Lagrangian_test_err

# Show stderr if doesn't match expected output if VERBOSE == 1
if "$CMP" -s Lagrangian_test_err errok; then
  :
else
    echo "err:" >&2
    cat Lagrangian_test_err >&2
    echo "errok:" >&2
    cat errok >&2
    exit 1
fi
