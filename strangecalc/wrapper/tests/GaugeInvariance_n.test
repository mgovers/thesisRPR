# Common definitions
if test -z "$srcdir"; then
    srcdir=`echo "$0" | sed 's,[^/]*$,,'`
    test "$srcdir" = "$0" && srcdir=.
    test -z "$srcdir" && srcdir=.
    test "${VERBOSE+set}" != set && VERBOSE=1
fi
. $srcdir/defs

# setup some stuff prior to running test
RUNTSC="${SETUP}/GaugeInvariance_test"
cp -r ${SETUP}/GaugeInvariance_test_n_ok .
cp -r ${SETUP}/GaugeInvariance_test_n_errok .

for k in D E H I M N T B
do
    echo "Checking class${k}" | tee -a -i GaugeInvariance_test_out >&2
     # Run the test saving stderr to a file, and showing stdout if VERBOSE == 1
     $RUNTSC ${SETUP}/class${k}/fit_specification 1 n 2>> GaugeInvariance_test_err | tail -n138 | tee -a -i GaugeInvariance_test_out >&2
done

# Test against expected output
if ${CMP} -s GaugeInvariance_test_out GaugeInvariance_test_n_ok
then
    :
else
    echo "ok:" >&2
    cat GaugeInvariance_test_n_ok >&2
    exit 1
fi

# Show stderr if doesn't match expected output if VERBOSE == 1
if "$CMP" -s GaugeInvariance_test_err GaugeInvariance_test_n_errok; 
then
  :
else
    echo "err:" >&2
    cat Observable_test_err >&2
    echo "errok:" >&2
    cat errok >&2
    exit 1
fi